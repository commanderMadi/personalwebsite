<header class='bg-white shadow-md py-4 px-6'>
  <div class='container mx-auto flex justify-between items-center'>
    <!-- Logo -->
    <h1 class='text-xl font-bold text-blue-600'><a href='/'>Ahmed Magdy</a></h1>

    <!-- Hamburger Icon (Visible on Mobile) -->
    <button
      id='hamburger-button'
      class='block md:hidden p-2 text-gray-600 hover:text-gray-800 focus:outline-none'
      aria-expanded='false'
    >
      <svg xmlns='http://www.w3.org/2000/svg' class='h-6 w-6' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16m-7 6h7'></path>
      </svg>
    </button>

    <!-- Navigation Links -->
    <nav
      id='mobile-menu'
      class='hidden md:flex flex-col md:flex-row md:space-x-6 absolute md:static top-16 left-0 w-full md:w-auto bg-white md:bg-transparent shadow-md md:shadow-none z-50'
    >
      <a href='/' class='block px-4 py-2 text-gray-600 hover:text-blue-600'>Home</a>
      <a href='/blog' class='block px-4 py-2 text-gray-600 hover:text-blue-600'>Blog</a>
      <a href='/shelf' class='block px-4 py-2 text-gray-600 hover:text-blue-600'>Shelf</a>
    </nav>
  </div>
</header>

<script>
  const button = document.getElementById('hamburger-button')
  const menu = document.getElementById('mobile-menu')

  button?.addEventListener('click', () => {
    const isExpanded = button.getAttribute('aria-expanded') === 'true'
    button.setAttribute('aria-expanded', (!isExpanded).toString()) // Convert boolean to string
    menu?.classList.toggle('hidden')
  })
</script>
